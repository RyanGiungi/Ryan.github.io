#include <stdio.h>

int main() {
    float altura_chico = 1.50; // Altura inicial do Chico em metros
    float altura_ze = 1.40;   // Altura inicial do Zé em metros
    int anos = 0;             // Contador de anos

    // Enquanto a altura do Zé for menor ou igual à altura do Chico
    while (altura_ze <= altura_chico) {
        altura_chico += 0.02;  // Chico cresce 2 centímetros por ano
        altura_ze += 0.03;     // Zé cresce 3 centímetros por ano
        anos++;                // Incrementa o contador de anos
    }

    // Imprime o resultado
    printf("Zé será maior que Chico em %d anos.\n", anos);

    return 0;
}
